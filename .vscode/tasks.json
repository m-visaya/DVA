{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install main dependencies",
      "type": "shell",
      "command": "npm install --legacy-peer-deps",
      "promptOnClose": false,
      "presentation": {
        "revealProblems": "onProblem",
        "group": "Install dependencies"
      }
    },
    {
      "label": "Install render dependencies",
      "type": "shell",
      "command": "npm install --legacy-peer-deps",
      "promptOnClose": false,
      "options": {
        "cwd": "${workspaceFolder}/src/render"
      },
      "presentation": {
        "revealProblems": "onProblem",
        "group": "Install dependencies"
      }
    },
    {
      "label": "Install dependencies",
      "dependsOn": ["Install main dependencies", "Install render dependencies"],
      "dependsOrder": "parallel",
      "promptOnClose": false
    },
    {
      "label": "Run vite project",
      "type": "npm",
      "script": "dev",
      "promptOnClose": false,
      "options": {
        "cwd": "${workspaceFolder}/src/render"
      },
      "presentation": {
        "revealProblems": "onProblem",
        "group": "Run project"
      }
    },
    {
      "label": "Run electron project",
      "type": "npm",
      "script": "start",
      "promptOnClose": false,
      "presentation": {
        "revealProblems": "onProblem",
        "group": "Run project"
      }
    },
    {
      "label": "Run project",
      "dependsOn": ["Run vite project", "Run electron project"],
      "dependsOrder": "parallel",
      "promptOnClose": false
    },
    {
      "label": "Build vite project",
      "type": "npm",
      "script": "build",
      "promptOnClose": false,
      "options": {
        "cwd": "${workspaceFolder}/src/render"
      }
    },
    {
      "label": "Build electron package",
      "type": "npm",
      "script": "package",
      "promptOnClose": false
    },
    {
      "label": "Build electron executable",
      "type": "npm",
      "script": "make",
      "promptOnClose": false
    },
    {
      "label": "Build app package",
      "dependsOn": ["Build vite project", "Build electron package"],
      "dependsOrder": "sequence",
      "promptOnClose": false
    },
    {
      "label": "Build app executable",
      "dependsOn": ["Build vite project", "Build electron executable"],
      "dependsOrder": "sequence",
      "promptOnClose": false
    }
  ]
}
